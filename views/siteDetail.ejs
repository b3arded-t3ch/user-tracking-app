<%- include('layout', { title: 'Site Detail' }) %>

<h1><%= site.name %></h1>
<p>Country: <%= site.country %></p>
<p>Description: <%= site.description %></p>
<p>Last Updated: <%= site.lastUpdated.toLocaleDateString() %></p>

<h2>Recent Activity</h2>
<ul>
    <% site.recentActivity.forEach(activity => { %>
        <li>
            <%= activity.user.username %> <%= activity.action %> on <%= activity.date.toLocaleDateString() %>
        </li>
    <% }) %>
</ul>

<a href="/sites/<%= site._id %>/edit">Edit Site</a>
<a href="/sites">Back to Sites List</a>
